
@{
    ViewBag.Title = "Восстановление пароля";
}

<!DOCTYPE html>
<html ng-app="PassRecoveryApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Models/js/PassRecoveryModel.js"></script>
</head>
<body ng-controller="PassRecovery">
<div class="absolute-center">
    <div class="col-md-6 col-md-offset-3">
        <div class="jumbotron" style="border-radius: 10px">
            <div align="center">
                <div class="col-md-12">
                    <div class="row">
                        <h2>Введите email указанный при регистрации</h2>
                        <div class="form-group">
                            <div class="col-md-4 col-md-offset-4">
                                <input class="form-control" type="email" ng-model="recoveryEmail" style="height: 40px; width: 250px;">
                            </div>
                            <div class="col-md-4">
                                <p class="help-block" ng-show="recoveryEmailErMs != ''" style="color: #337AB7; font-size: 16px; text-align: left;">{{recoveryEmailErMs}}</p>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="col-md-12">
                    <br/>
                </div>
                <div class="row">
                    <div class="form-group col-md-4 col-md-offset-4">
                        <button class="btn btn-primary" ng-click="btnRecovery()" style="height: 40px; width: 250px; font-size: 20px;">Восстановить</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

    @*Модальное окно подтверждения восстановления*@
    <div class="modal fade" id="emailRecoveryModal" tabindex="-1" role="dialog" data-backdrop="static">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body" style="text-align: center">
                    <h4>Ссылка для восстановления пароля отправлена на указанный email</h4>
                </div>
                <div class="modal-footer">
                    <button ng-click="IndexRedirect();" type="button" class="btn btn-primary" data-dismiss="modal">Ок</button>
                </div>
            </div>
        </div>
    </div>

</body>
</html>

