    <script src="~/Scripts/angular.min.js"></script>
</head>
<body class="image-screen">
    <div class="absolute-center">
        <div class="col-md-6 col-md-offset-3">
            <div class="jumbotron" style="background-color: rgba(0, 0, 0, 0.3); border-radius: 10px">
                <div align="center">
                    <div class="col-md-12">
                        <div class="row">
                            <div style="align-content: center">
                                <input type="text" class="form-control" placeholder="Ваше имя" style="height: 40px; width: 250px;"/>
