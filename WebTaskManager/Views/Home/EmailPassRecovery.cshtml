
@{
    ViewBag.Title = "Новый пароль";
}

<!DOCTYPE html>
<html ng-app="PassRecoveryApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Models/js/PassRecoveryModel.js"></script>
</head>
<body ng-controller="PassRecovery">
    <div class="absolute-center">
        <div class="col-md-6 col-md-offset-3">
            <div class="jumbotron" style="border-radius: 10px">
                <div align="center">
                    <div class="col-md-12">
                        <div class="row">
                            <h2>Придумайте новый пароль</h2>
                            <div class="form-group">
                                <div id="PasswordHash" name=@ViewBag.userHash class="col-md-4 col-md-offset-4">
                                    <input placeholder="Пароль" class="form-control" type="password" ng-model="recoveryPassword" style="height: 40px; width: 250px;">
                                </div>
                                <div class="col-md-4">
                                    <p class="help-block" ng-show="recoveryPasswordErMs != ''" style="color: #337AB7; font-size: 16px; text-align: left;">{{recoveryPasswordErMs}}</p>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-4 col-md-offset-4">
                                    <input placeholder="Повторите пароль" class="form-control" type="password" ng-model="recoveryPasswordRepeat" style="height: 40px; width: 250px;">
                                </div>
                                <div class="col-md-4">
                                    <p class="help-block" ng-show="recoveryPasswordRepeatErMs != ''" style="color: #337AB7; font-size: 16px; text-align: left;">{{recoveryPasswordRepeatErMs}}</p>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="col-md-12">
                        <br />
                    </div>
                    <div class="row">
                        <div class="form-group col-md-4 col-md-offset-4">
                            <button class="btn btn-primary" ng-click="btnSaveNewPass()" style="height: 40px; width: 250px; font-size: 20px;">Сохранить</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    @*Модальное окно подтверждения восстановления*@
    <div class="modal fade" id="newPassSavedModal" tabindex="-1" role="dialog" data-backdrop="static">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body" style="text-align: center">
                    <h4>{{modalMessage}}</h4>
                </div>
                <div class="modal-footer">
                    <button ng-click="IndexRedirect();" type="button" class="btn btn-primary" data-dismiss="modal">Ок</button>
                </div>
            </div>
        </div>
    </div>

</body>
</html>